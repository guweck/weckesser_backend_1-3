<h1>Productos</h1>

<ul>
  {{#each productos}}
    <li>
      <a href="/products/{{_id}}">
        <strong>{{title}}</strong>
      </a> - ${{price}} <br>
      <em>{{description}}</em> <br>
      <span><b>Stock:</b> {{stock}}</span> <br>
      <span><b>Categoría:</b> {{category}}</span>
      <hr>
    </li>
  {{/each}}
</ul>

<!-- Navegación -->
<div>
  {{#if hasPrevPage}}
    <a href="/products?page={{prevPage}}&limit=5">⬅️ Anterior</a>
  {{/if}}

  <span>Página {{page}}</span>

  {{#if hasNextPage}}
    <a href="/products?page={{nextPage}}&limit=5">Siguiente ➡️</a>
  {{/if}}
</div>
